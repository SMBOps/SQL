SELECT 
jr.created_at, 
jr.updated_at,
u.formatted_name AS referrer, 
u2.formatted_name AS referral, 
ue.email, j.title,
jr.stage,
if(cs.stage=15,"endorsement",if(cs.stage=20,"contacted",if(cs.stage=30,"active",if(cs.stage=40,"pushed","lead")))) as "type"

FROM simplrcore_jobreferrals jr

INNER JOIN simplrcore_user u ON u.id=jr.referrer_id 
INNER JOIN simplrcore_user u2 ON u2.id=jr.referral_id 
INNER JOIN simplrcore_job j ON j.id=jr.job_id 
INNER JOIN talent_radar_contactstage cs ON cs.contact_id=u2.id
INNER JOIN simplrcore_useremails ue ON ue.user_id=u2.id
 
WHERE u.organization_id=109

/*ONLY IF REFERRER IS IN MORE THAN ONE ORGANIZATION*/
GROUP BY ue.email 

/* 
leads = 0
archived = 10
passive = 15
contacted = 20
active = 30
pushed = 40 
*/

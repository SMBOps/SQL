SELECT

msg.id, msg.body, msg.updated_at as reply_date,
u.formatted_name as "message from",
if(u.type_id =1, "recruiter", if(u.type_id =2, "employee", "candidate")) as "from type",
u2.formatted_name as "message to",
if(u2.type_id =1, "recruiter", if(u2.type_id =2, "employee", "candidate")) as "to type"

FROM messaging_message msg

JOIN simplrcore_user u ON u.id=msg.sender_id
JOIN simplrcore_user u2 ON u2.id=msg.recipient_id

WHERE msg.organization_id=81

ORDER BY reply_date desc
